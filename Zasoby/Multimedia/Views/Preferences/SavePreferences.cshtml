@model UserPreferences

@{
    ViewData["Title"] = "User Preferences";
}

<h2>User Preferences</h2>

@if (ViewData["Saved"] != null && (bool)ViewData["Saved"])
{
    <div class="alert alert-success" role="alert">
        Preferences were saved successfully.
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<form asp-action="SavePreferences" method="post">
    <div class="form-group">
        <label asp-for="ReceiveMessages"></label>
        <input asp-for="ReceiveMessages" class="form-check-input" />
        <span asp-validation-for="ReceiveMessages" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PreferredDeliveryTime"></label>
        <input asp-for="PreferredDeliveryTime" type="time" class="form-control" />
        <span asp-validation-for="PreferredDeliveryTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryMethod"></label>
        <input asp-for="DeliveryMethod" class="form-control" />
        <span asp-validation-for="DeliveryMethod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BlockedHoursStart"></label>
        <input asp-for="BlockedHoursStart" type="time" class="form-control" />
        <span asp-validation-for="BlockedHoursStart" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BlockedHoursEnd"></label>
        <input asp-for="BlockedHoursEnd" type="time" class="form-control" />
        <span asp-validation-for="BlockedHoursEnd" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
