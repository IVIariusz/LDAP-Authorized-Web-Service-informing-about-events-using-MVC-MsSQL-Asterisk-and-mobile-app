@model Multimedia.Models.UserPreferences

<h2>Manage Preferences</h2>

<form asp-action="ManagePreferences" method="post">
    <div class="form-group">
        <label asp-for="ReceiveMessages">Receive Messages</label>
        <input asp-for="ReceiveMessages" class="form-check" />
    </div>

    <div class="form-group">
        <label asp-for="PreferredDeliveryTime">Preferred Delivery Time</label>
        <input asp-for="PreferredDeliveryTime" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DeliveryMethod">Delivery Method</label>
        <input asp-for="DeliveryMethod" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BlockedHoursStart">Blocked Hours Start</label>
        <input asp-for="BlockedHoursStart" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BlockedHoursEnd">Blocked Hours End</label>
        <input asp-for="BlockedHoursEnd" type="time" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Preferences</button>
</form>
