@model RegisterViewModel

<link rel="stylesheet" href="~/css/register.css">

<div class="container">
    <form asp-action="Register" method="post">
        <h2>Rejestracja</h2>
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Nick" />
            <label asp-for="UserName">Nick</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Imię" />
            <label asp-for="Name">Imię</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Surname" class="form-control" placeholder="Nazwisko" />
            <label asp-for="Surname">Nazwisko</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Adres Email" />
            <label asp-for="Email">Adres Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Numer Telefonu" />
            <label asp-for="PhoneNumber">Numer Telefonu</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Hasło" />
            <label asp-for="Password">Hasło</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Potwierdź Hasło" />
            <label asp-for="ConfirmPassword">Potwierdź Hasło</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </form>
</div>